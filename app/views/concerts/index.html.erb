<ul data-role="listview" data-inset="true" data-shadow="false" data-corners="false" id="concert-list">
  <% @concerts.each do |concert| %>
  <li>
    <h3><%= concert.title %></h3>
    <p><strong><%= concert.venue %></strong></p>
    <p><%= concert.date.strftime("%B %d, %Y") %></p>
    <p class="ui-li-aside"><%= link_to "Relive", concert, data: {role: 'button'} %></p>
  </li>
  <% end %>
</ul>