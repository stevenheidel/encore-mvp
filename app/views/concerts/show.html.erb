<%= render :partial => "shared/concert_header", :locals => {:back_button => false} %>

<%= render @concert.posts.published %>

<script>
  $('.heartpic').click(function(event) {
    $.post("/favourite/" + event.target.id, function(data) {
      var img = $("#" + event.target.id);
      var src = img.attr('src');
      if (src.indexOf("heart-on") !== -1) {
        img.attr('src', '/assets/stream/heart.png');
      }
      else {
        img.attr('src', '/assets/stream/heart-on.png');
      }
    });
    return false;
  });
</script>