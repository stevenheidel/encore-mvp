<div id="concertheader">
  <div class="concertcover">
    <%= image_tag @concert.picture.url(:medium) %>
    <h2><%= @concert.title %></h2>
  </div>
  <div class="concertinfo">
    <p>
      <%= @concert.venue %>, <%= @concert.date.strftime("%B %d %Y") %>
      
      <% if back_button %>
      <a href="<%= parent_url %>" data-role="button" data-inline="true" data-theme="reset" class="app-theme-none backred"></a>
      <% else %>
      <a href="<%= resource_url %>/setlists" data-role="button" data-inline="true" data-theme="reset" class="app-theme-none setlist"></a>
      <% end %>
    </p>
  </div>
</div>