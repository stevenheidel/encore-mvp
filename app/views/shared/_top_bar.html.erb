<% cache ["top-bar", current_user] do %>
<div data-role="header" id="top-bar" data-position="fixed">
  <a href="#menu" id="menu-trigger" data-role="button" data-theme="reset" class="menu-trigger app-theme-none options"></a>
  <div class="bolt"><%= image_tag "shared/bolt.png" %></div>
  <a href="#infoPopup" id="heart-button" data-role="button" data-rel="popup" data-position-to="window" data-theme="reset" data-transition="pop" class="app-theme-none info"></a>
  <span class="ui-title" />
</div>
<% end %>