<% cache ["v1", "signup-popup"] do %>
<div data-role="popup" id="popupMenu" data-theme="a">
  <div data-role="popup" id="popupLogin" data-theme="a" class="ui-corner-all">
    <form id="signupForm">
      <div style="padding:10px 20px;">
        <h3 style="text-align:center;">
          Encore is coming to iPhone and Android this June<br />
          Join our exclusive beta list:
        </h3>
        <input type="text" name="email" id="email" value="" placeholder="email" data-theme="a">
        <p style="text-align:center;margin:0px;">- OR -</p>
        <input type="text" name="phone" id="phone" value="" placeholder="phone number" data-theme="a">
        <button type="submit" data-theme="b">Sign Up</button>
      </div>
    </form>
  </div>
</div>
<% end %>