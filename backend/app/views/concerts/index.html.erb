<h1>Listing concerts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Venue</th>
    <th>Hashtag</th>
    <th>Facebook page</th>
    <th>Twitter</th>
    <th>Instagram</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @concerts.each do |concert| %>
  <tr>
    <td><%= concert.title %></td>
    <td><%= concert.date %></td>
    <td><%= concert.venue %></td>
    <td><%= concert.hashtag %></td>
    <td><%= concert.facebook_page %></td>
    <td><%= concert.twitter %></td>
    <td><%= concert.instagram %></td>
    <td><%= link_to 'Show', concert %></td>
    <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
    <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

